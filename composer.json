{
    "name": "defstudio/production-ribbon",
    "description": "Show a nice red alert ribbon when your user is in a production environment",
    "keywords": [
        "defstudio",
        "laravel",
        "production-ribbon"
    ],
    "homepage": "https://github.com/defstudio/production-ribbon",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Ivona",
            "email": "fabio.ivona@defstudio.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "rector/rector": "^0.15.19",
        "spatie/laravel-ray": "^1.26",
        "spatie/pest-plugin-snapshots": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DefStudio\\ProductionRibbon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DefStudio\\ProductionRibbon\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "lint": "vendor/bin/pint",
        "refactor": "vendor/bin/rector",
        "test": "vendor/bin/pest --colors=always",
        "test:refactor": "@refactor --dry-run",
        "test:lint": "@lint -v --test",
        "test:types": "vendor/bin/phpstan analyse --ansi --memory-limit=-1",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:all": [
            "@test:lint",
            "@test:types",
            "@test:refactor",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DefStudio\\ProductionRibbon\\ProductionRibbonServiceProvider"
            ],
            "aliases": {
                "ProductionRibbon": "DefStudio\\ProductionRibbon\\Facades\\ProductionRibbon"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
